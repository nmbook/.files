# env vars for session
PS1_GREEN=$'\[\033[1;32m\]'
PS1_GRAY=$'\[\033[1;30m\]'
PS1_BLUE=$'\[\033[1;34m\]'
PS1_CLEAR=$'\[\033[0m\]'
export PS1="$PS1_GRAY\u$PS1_CLEAR@$PS1_GREEN\h$PS1_CLEAR:$PS1_BLUE\W$PS1_CLEAR$ "
export TERM=xterm-256color

# shell aliases
alias ll='ls -l'
alias tree='tree -ACF'
alias more='less'
alias less='less -Mr'
alias gcim='gvim'
alias givm='gvim'
alias v='gvim'
alias grep='grep --color=yes'
alias cd..='cd ..'
alias ..='cd ..'
alias ls='ls -hF --color'
alias t='gnome-terminal'
alias term='t'
alias xterm='t'
alias konsole='t'
alias terminal='t'
alias logout='exit'
alias unizp='unzip'
alias lock='gnome-screensaver-command --lock'

# shell umask
umask 0077

# shell options
shopt -s checkwinsize histappend


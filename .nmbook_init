# enable screensaver [-> csug] 
tty -s
if [ $? -eq 1 ]
then
    [ -n "$DISPLAY"  ] && gnome-screensaver &
fi

# env vars for session
TERM=xterm-256color
PS1_GREEN=$'\[\033[1;32m\]'
PS1_GRAY=$'\[\033[1;30m\]'
PS1_BLUE=$'\[\033[1;34m\]'
PS1_CLEAR=$'\[\033[0m\]'
PS1="$PS1_GRAY\u$PS1_CLEAR@$PS1_GREEN\h$PS1_CLEAR:$PS1_BLUE\W$PS1_CLEAR$ "
export TERM PS1
export PATH=/u/nbook/Programs/bin:/usr/staff/bin:/usr/cs254/bin:$PATH
export PERL5LIB=/u/nbook/perl5/lib/perl5
export CUPS_SERVER=print

# shell aliases
alias ll='ls -l'
alias tree='tree -AC'
alias more='less'
alias less='less -MR'
alias gcim='gvim'
alias givm='gvim'
alias v='gvim'
alias grep='grep --color=yes'
alias cd..='cd ..'
alias ..='cd ..'
alias ls='ls -hF --color'
alias t='gnome-terminal'
alias term='t'
alias xterm='t'
alias konsole='t'
alias terminal='t'
alias logout='exit'
alias unizp='unzip'
alias lock='gnome-screensaver-command --lock'

# shell umask
umask 0077

# shell options
shopt -s checkwinsize histappend

# fix shell not starting in ~
cd ~



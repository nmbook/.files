# vi:syntax=sh
# env vars for session
PS1_GRAY=$'\[\033[38;5;242m\]' # username
PS1_GREEN=$'\[\033[38;5;40m\]' # host name
PS1_BLUE=$'\[\033[38;5;27m\]' # dir color
PS1_CLEAR=$'\[\033[0m\]'
PS1="$PS1_GRAY\u$PS1_CLEAR@$PS1_GREEN\H$PS1_CLEAR:$PS1_BLUE\W$PS1_CLEAR$ "
if [ -n "$SSH_CLIENT" ]; then
    export PS1="\[\e]0;\u@\H:\W\a\]$PS1"
else
    export PS1="\[\e]0;\W\a\]$PS1"
fi

if [ -e /usr/share/terminfo/x/xterm+256color ]; then
    export TERM='xterm-256color'
elif [ -e /usr/share/terminfo/x/xterm-256color ]; then
    export TERM='xterm-256color'
else
    export TERM='xterm-color'
fi

# shell aliases
alias ll='ls -l'
alias tree='tree -ACF'
alias more='less'
alias less='less -Mr'
alias gcim='gvim'
alias givm='gvim'
alias v='gvim'
alias grep='grep --color=yes'
alias cd..='cd ..'
alias ..='cd ..'
alias ls='ls -hF --color'
alias t='gnome-terminal'
alias term='t'
alias xterm='t'
alias konsole='t'
alias terminal='t'
alias logout='exit'
alias unizp='unzip'
alias img='eog'
alias pdf='evince'
alias rtf='libreoffice'
alias lock='gnome-screensaver-command --lock'

# shell umask
umask 0077

# shell options
shopt -s checkwinsize histappend


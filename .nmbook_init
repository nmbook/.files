# enable screensaver [-> csug] 
tty -s
if [ $? -eq 1 ]
then
    [ -n "$DISPLAY"  ] && gnome-screensaver &
fi

# env vars for session
TERM=xterm-256color
PS1_GREEN=$'\[\033[1;32m\]'
PS1_GRAY=$'\[\033[1;30m\]'
PS1_BLUE=$'\[\033[1;34m\]'
PS1_CLEAR=$'\[\033[0m\]'
export PERL5LIB=/u/nbook/perl5/lib/perl5
export CUPS_SERVER=print
export URCS='.cs.rochester.edu'
export PS1="$PS1_GRAY\u$PS1_CLEAR@$PS1_GREEN\H$PS1_CLEAR:$PS1_BLUE\W$PS1_CLEAR$ "
[ -n "$TMUX" ] && export TERM=screen-256color
export PATH=~/Programs/bin:$PATH:/usr/cs254/bin

# shell aliases
alias ll='ls -l'
alias tree='tree -ACF'
alias more='less'
alias less='less -Mr'
alias gcim='gvim'
alias givm='gvim'
alias v='gvim'
alias grep='grep --color=yes'
alias cd..='cd ..'
alias ..='cd ..'
alias ls='ls -hF --color'
alias t='gnome-terminal'
alias term='t'
alias xterm='t'
alias konsole='t'
alias terminal='t'
alias logout='exit'
alias unizp='unzip'
alias img='eog'
alias pdf='evince'
alias rtf='libreoffice'
alias lock='gnome-screensaver-command --lock'

# shell umask
umask 0077

# shell options
shopt -s checkwinsize histappend

# fix shell not starting in ~
cd ~


